{
  "database": {
    "path": "data/logical_release.db",
    "backup_interval": 24,
    "max_backups": 30,
    "pool": {
      "enabled": true,
      "pool_size": 10,
      "max_overflow": 20,
      "timeout": 30
    },
    "backups": {
      "encrypted": true,
      "backup_dir": "data/backups",
      "max_backups": 30,
      "encryption_key_path": null
    }
  },
  "ui": {
    "language": "ar",
    "theme": "light",
    "rtl": true,
    "font_family": "Segoe UI",
    "font_size": 10
  },
  "security": {
    "session_timeout": 480,
    "password_min_length": 6,
    "enable_audit_log": true
  },
  "reports": {
    "default_format": "pdf",
    "auto_save": true,
    "save_path": "data/exports"
  },
  "cache": {
    "enabled": true,
    "default_ttl": 600,
    "disk_cache": false,
    "disk_path": "data/cache"
  },
  "pos": {
    "auto_print": false,
    "receipt_copies": 1,
    "default_payment_method": "نقدي"
  }
}