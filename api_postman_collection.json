{
  "info": {
    "name": "Logical Version API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for Logical Version REST API"
  },
  "item": [
    {
      "name": "Health",
      "request": {"method": "GET", "url": "{{baseUrl}}/health"}
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var data = pm.response.json();",
              "pm.environment.set('token', data.access_token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/products?page=1&page_size=10"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/products",
            "body": {"mode": "raw", "raw": "{\n  \"name\": \"Sample Product\",\n  \"unit\": \"قطعة\",\n  \"cost_price\": 10,\n  \"selling_price\": 15,\n  \"barcode\": \"PRD-SAMPLE-001\"\n}"}
          }
        },
        {
          "name": "Product Detail",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/products/1"
          }
        },
        {
          "name": "Create Variant",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/products/1/variants",
            "body": {"mode": "raw", "raw": "{\n  \"sku\": \"SKU-001\",\n  \"attributes\": {\"size\": \"L\"},\n  \"selling_price\": 16\n}"}
          }
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Add Tag",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/products/1/tags",
            "body": {"mode": "raw", "raw": "{\n  \"tag\": \"summer\"\n}"}
          }
        },
        {
          "name": "List Tags",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/products/1/tags"
          }
        }
      ]
    },
    {
      "name": "Bundles",
      "item": [
        {
          "name": "List Bundles",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/bundles?page=1&page_size=10"
          }
        }
      ]
    },
    {
      "name": "Pricing",
      "item": [
        {
          "name": "Create Price Tier",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/prices",
            "body": {"mode": "raw", "raw": "{\n  \"product_id\": 1,\n  \"price_type\": \"retail\",\n  \"min_qty\": 5,\n  \"price\": 12.5\n}"}
          }
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8000"},
    {"key": "username", "value": "admin"},
    {"key": "password", "value": "admin123"}
  ]
}
